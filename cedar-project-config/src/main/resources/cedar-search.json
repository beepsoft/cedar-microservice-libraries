{
  "settings": {
    "index": {
      "analysis": {
        "tokenizer": {
          "cedar_ngram_tokenizer": {
            "type": "ngram",
            "min_gram": "2",
            "max_gram": "20"
          }
        },
        "analyzer": {
          "cedar_ngram_analyzer": {
            "tokenizer": "cedar_ngram_tokenizer",
            "filter": [
              "lowercase"
            ]
          },
          "cedar_search_analyzer": {
            "tokenizer": "standard",
            "filter": [
              "lowercase"
            ]
          }
        }
      },
      "mapping": {
        "nested_fields": {
          "limit": "100"
        },
        "total_fields": {
          "limit": "1000"
        }
      }
    }
  },
  "mappings": {
    "_doc": {
      "properties": {
        "cid": {
          "type": "keyword"
        },
        "summaryText": {
          "type": "text",
          "analyzer": "cedar_ngram_analyzer",
          "search_analyzer": "cedar_search_analyzer",
          "fields": {
            "raw": {
              "type": "text",
              "analyzer": "standard"
            }
          }
        },
        "users": {
          "type": "keyword"
        },
        "groups": {
          "type": "keyword"
        },
        "info": {
          "properties": {
            "@id": {
              "type": "keyword"
            },
            "resourceType": {
              "type": "keyword"
            },
            "pav:createdBy": {
              "type": "keyword"
            },
            "oslc:modifiedBy": {
              "type": "keyword"
            },
            "schema:isBasedOn": {
              "type": "keyword"
            },
            "pav:derivedFrom": {
              "type": "keyword"
            },
            "bibo:status": {
              "type": "keyword"
            },
            "pav:version": {
              "type": "keyword"
            },
            "pav:previousVersion": {
              "type": "keyword"
            },
            "pav:createdOn": {
              "type": "date"
            },
            "pav:lastUpdatedOn": {
              "type": "date"
            },
            "ownedBy": {
              "type": "keyword"
            },
            "isLatestVersion": {
              "type": "boolean"
            },
            "isOpen": {
              "type": "boolean"
            },
            "schema:name": {
              "type": "keyword"
            },
            "schema:description": {
              "type": "keyword"
            }
          }
        }
      }
    }
  }
}
